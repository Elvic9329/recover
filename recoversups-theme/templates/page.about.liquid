      margin: 0 auto 20px;
      
      svg {
        width: 30px;
        height: 30px;
        color: white;
      }
    }
    
    h3 {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-secondary);
      margin-bottom: 12px;
    }
    
    p {
      font-size: 0.9rem;
      line-height: 1.6;
      color: var(--text-muted);
    }
  }
}

.contact-cta {
  background: var(--primary-color);
  color: white;
  border-radius: 16px;
  
  .cta-content {
    h2 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 16px;
      color: white;
      
      @media (max-width: 768px) {
        font-size: 2rem;
      }
    }
    
    p {
      font-size: 1.125rem;
      margin-bottom: 40px;
      opacity: 0.9;
    }
    
    .cta-buttons {
      display: flex;
      gap: 20px;
      justify-content: center;
      
      @media (max-width: 480px) {
        flex-direction: column;
        align-items: center;
      }
      
      .btn {
        padding: 16px 32px;
        font-size: 1rem;
        font-weight: 600;
        
        &.btn-primary {
          background: white;
          color: var(--primary-color);
          
          &:hover {
            background: var(--background-gray);
          }
        }
        
        &.btn-outline {
          border: 2px solid white;
          color: white;
          
          &:hover {
            background: white;
            color: var(--primary-color);
          }
        }
      }
    }
  }
}
</style>