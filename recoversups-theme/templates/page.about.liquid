      margin: 0 auto 24px;
      
      svg {
        width: 40px;
        height: 40px;
        color: white;
      }
    }
    
    h3 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-secondary);
      margin-bottom: 16px;
    }
    
