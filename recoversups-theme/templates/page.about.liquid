      aspect-ratio: 1;
      overflow: hidden;
      
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    
    .member-info {
      padding: 24px;
      text-align: center;
      
      h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-secondary);
        margin-bottom: 8px;
      }
      
      .member-role {
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 12px;
      }
      
      .member-description {
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--text-muted);
      }
    }
  }
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 40px;
  
  .feature-item {
    .feature-icon {
      width: 60px;
      height: 60px;
      background: var(--primary-color);
      border-radius: 50%;
      display: flex;
      align-items: center;
