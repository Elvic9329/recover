      margin: 0 auto 20px;
      
      svg {
        width: 30px;
        height: 30px;
        color: white;
      }
    }
    
    h3 {
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--text-secondary);
      margin-bottom: 12px;
    }
    
    p {
      font-size: 0.9rem;
      line-height: 1.6;
      color: var(--text-muted);
    }
  }
}

.team-section {
  background: var(--background-gray);
  
  .team-intro {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 48px;
  }
}

