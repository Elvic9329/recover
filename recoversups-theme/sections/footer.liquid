{% comment %}
  Footer Section - Recoversups
{% endcomment %}

<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-content">
      
      <!-- Newsletter Section -->
      <div class="footer-newsletter">
        <h3 class="newsletter-title">{{ section.settings.newsletter_title | default: 'Suscríbete a nuestro newsletter' }}</h3>
        <p class="newsletter-description">{{ section.settings.newsletter_description | default: 'Recibe ofertas exclusivas y consejos fitness' }}</p>
        
        <form action="{{ routes.root_url }}contact#contact_form" method="post" class="newsletter-form">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="✓">
          <div class="newsletter-input-group">
            <input type="email" 
                   name="contact[email]" 
                   placeholder="Tu email" 
                   class="newsletter-input"
                   required>
            <button type="submit" class="newsletter-submit">
              Suscribirse
            </button>
          </div>
        </form>
      </div>

      <!-- Footer Links -->
      <div class="footer-links">
        <div class="footer-column">
          <h4 class="footer-title">Productos</h4>
          <ul class="footer-list">
            {% for link in linklists.footer-products.links %}
              <li class="footer-item">
                <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="footer-column">
          <h4 class="footer-title">Soporte</h4>
          <ul class="footer-list">
            {% for link in linklists.footer-support.links %}
              <li class="footer-item">
                <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="footer-column">
          <h4 class="footer-title">Empresa</h4>
          <ul class="footer-list">
            {% for link in linklists.footer-company.links %}
              <li class="footer-item">
                <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="footer-column">
          <h4 class="footer-title">Síguenos</h4>
          <div class="social-links">
            {% if section.settings.social_facebook_url != blank %}
              <a href="{{ section.settings.social_facebook_url }}" class="social-link" aria-label="Facebook">
                <svg class="icon icon-facebook" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            {% if section.settings.social_instagram_url != blank %}
              <a href="{{ section.settings.social_instagram_url }}" class="social-link" aria-label="Instagram">
                <svg class="icon icon-instagram" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            {% endif %}
            {% if section.settings.social_youtube_url != blank %}
              <a href="{{ section.settings.social_youtube_url }}" class="social-link" aria-label="YouTube">
                <svg class="icon icon-youtube" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
            {% if section.settings.social_tiktok_url != blank %}
              <a href="{{ section.settings.social_tiktok_url }}" class="social-link" aria-label="TikTok">
                <svg class="icon icon-tiktok" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-info">
          <p class="copyright">
            &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.
          </p>
          <p class="footer-description">
            {{ section.settings.footer_description | default: 'Suplementos deportivos de calidad al mejor precio en Perú' }}
          </p>
        </div>

        <div class="footer-badges">
          {% if section.settings.show_payment_icons %}
            <div class="payment-icons">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag: class: 'payment-icon' }}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: {{ section.settings.footer_bg_color | default: '#1a1a1a' }};
    color: {{ section.settings.footer_text_color | default: '#ffffff' }};
    padding: 3rem 0 1rem;
    margin-top: 3rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-newsletter {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 8px;
  }

  .newsletter-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #B62921;
    margin-bottom: 0.5rem;
  }

  .newsletter-description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
  }

  .newsletter-input-group {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 4px;
    background: rgba(255, 255, 255, 0.1);
    color: inherit;
    font-size: 1rem;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter-submit {
    background: #B62921;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .newsletter-submit:hover {
    background: #9a1f1a;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #B62921;
    margin-bottom: 1rem;
  }

  .footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-item {
    margin-bottom: 0.5rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: #B62921;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #B62921;
    color: white;
    transform: translateY(-2px);
  }

  .icon {
    width: 20px;
    height: 20px;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 0.5rem;
  }

  .footer-description {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
  }

  .payment-icons {
    display: flex;
    gap: 0.5rem;
  }

  .payment-icon {
    height: 24px;
    opacity: 0.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .newsletter-input-group {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Título del Newsletter",
      "default": "Suscríbete a nuestro newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_description",
      "label": "Descripción del Newsletter",
      "default": "Recibe ofertas exclusivas y consejos fitness"
    },
    {
      "type": "text",
      "id": "footer_description",
      "label": "Descripción del Footer",
      "default": "Suplementos deportivos de calidad al mejor precio en Perú"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Color de fondo",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Color de texto",
      "default": "#ffffff"
    },
    {
      "type": "url",
      "id": "social_facebook_url",
      "label": "URL de Facebook"
    },
    {
      "type": "url",
      "id": "social_instagram_url",
      "label": "URL de Instagram"
    },
    {
      "type": "url",
      "id": "social_youtube_url",
      "label": "URL de YouTube"
    },
    {
      "type": "url",
      "id": "social_tiktok_url",
      "label": "URL de TikTok"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Mostrar iconos de pago",
      "default": true
    }
  ]
}
{% endschema %}