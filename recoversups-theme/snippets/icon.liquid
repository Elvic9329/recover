{% comment %}
  Icon Component - Recoversups
  
  Parameters:
  - name: Icon name (required)
  - size: Icon size (optional, default: 20)
  - class: Additional CSS classes (optional)
{% endcomment %}

{% assign icon_size = size | default: 20 %}

<svg class="icon icon--{{ name }} {{ class }}" 
     width="{{ icon_size }}" 
     height="{{ icon_size }}" 
     viewBox="0 0 24 24" 
     fill="none" 
     stroke="currentColor" 
     stroke-width="2">
  
  {% case name %}
    {% when 'cart' %}
      <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17M17 13v4a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2v-4.01"></path>
    
    {% when 'heart' %}
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    
    {% when 'user' %}
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
    
    {% when 'search' %}
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    
    {% when 'menu' %}
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>
    
    {% when 'close' %}
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    
    {% when 'arrow-right' %}
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <polyline points="12,5 19,12 12,19"></polyline>
    
    {% when 'arrow-left' %}
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12,19 5,12 12,5"></polyline>
    
    {% when 'arrow-up' %}
      <line x1="12" y1="19" x2="12" y2="5"></line>
      <polyline points="5,12 12,5 19,12"></polyline>
    
    {% when 'arrow-down' %}
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <polyline points="19,12 12,19 5,12"></polyline>
    
    {% when 'check' %}
      <polyline points="20,6 9,17 4,12"></polyline>
    
    {% when 'plus' %}
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <line x1="5" y1="12" x2="19" y2="12"></line>
    
    {% when 'minus' %}
      <line x1="5" y1="12" x2="19" y2="12"></line>
    
    {% when 'star' %}
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
    
    {% when 'eye' %}
      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
      <circle cx="12" cy="12" r="3"></circle>
    
    {% when 'eye-off' %}
      <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
      <line x1="1" y1="1" x2="23" y2="23"></line>
    
    {% when 'truck' %}
      <rect x="1" y="3" width="15" height="13"></rect>
      <polygon points="16,3 21,8 21,16 16,16"></polygon>
      <circle cx="5.5" cy="18.5" r="2.5"></circle>
      <circle cx="18.5" cy="18.5" r="2.5"></circle>
    
    {% when 'shield' %}
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
    
    {% when 'refresh' %}
      <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
      <path d="M21 3v5h-5"></path>
      <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
      <path d="M3 21v-5h5"></path>
    
    {% when 'lock' %}
      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
      <circle cx="12" cy="7" r="4"></circle>
    
    {% when 'mail' %}
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
      <polyline points="22,6 12,13 2,6"></polyline>
    
    {% when 'phone' %}
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
    
    {% when 'instagram' %}
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
    
    {% when 'facebook' %}
      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
    
    {% when 'youtube' %}
      <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
      <polygon points="9.75,15.02 15.5,11.75 9.75,8.48"></polygon>
    
    {% when 'tiktok' %}
      <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
    
    {% else %}
      <!-- Default fallback icon -->
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" y1="8" x2="12" y2="12"></line>
      <line x1="12" y1="16" x2="12.01" y2="16"></line>
  {% endcase %}
</svg>

<style>
  .icon {
    display: inline-block;
    stroke-width: 2;
    fill: none;
    stroke: currentColor;
    vertical-align: middle;
    transition: transform $transition-fast;
  }

  .icon--heart {
    &:hover {
      transform: scale(1.1);
    }
  }

  .icon--star {
    fill: currentColor;
    stroke: none;
  }

  .icon--facebook,
  .icon--instagram,
  .icon--youtube,
  .icon--tiktok {
    fill: currentColor;
    stroke: none;
  }

  /* Size variants */
  .icon--small {
    width: 16px;
    height: 16px;
  }

  .icon--medium {
    width: 20px;
    height: 20px;
  }

  .icon--large {
    width: 24px;
    height: 24px;
  }

  .icon--xl {
    width: 32px;
    height: 32px;
  }

  /* Color variants */
  .icon--primary {
    color: $primary-color;
  }

  .icon--secondary {
    color: $secondary-color;
  }

  .icon--muted {
    color: $text-muted;
  }

  .icon--success {
    color: $success-color;
  }

  .icon--warning {
    color: $warning-color;
  }

  .icon--danger {
    color: $accent-color;
  }
</style>